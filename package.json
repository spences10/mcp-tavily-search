	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/mcp-tavily-search.git"
	},
	"bugs": {
		"url": "https://github.com/spences10/mcp-tavily-search/issues"
	},
	"homepage": "https://github.com/spences10/mcp-tavily-search#readme",
